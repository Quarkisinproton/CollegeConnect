{
  "entities": {
    "Event": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Event",
      "type": "object",
      "description": "Represents an event on the campus.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Event entity."
        },
        "name": {
          "type": "string",
          "description": "The name of the event."
        },
        "description": {
          "type": "string",
          "description": "A detailed description of the event."
        },
        "date": {
          "type": "string",
          "description": "The date of the event.",
          "format": "date-time"
        },
        "location": {
          "type": "string",
          "description": "The location of the event."
        },
        "createdBy": {
          "type": "string",
          "description": "The UID of the user who created the event."
        },
        "creatorName": {
          "type": "string",
          "description": "The display name of the user who created the event."
        },
        "latitude": {
          "type": "number",
          "description": "The latitude of the event location."
        },
        "longitude": {
          "type": "number",
          "description": "The longitude of the event location."
        }
      },
      "required": [
        "id",
        "name",
        "description",
        "date",
        "location",
        "createdBy",
        "creatorName",
        "latitude",
        "longitude"
      ]
    },
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the application.",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "role": {
          "type": "string",
          "enum": ["student", "president"],
          "description": "The role of the user."
        }
      },
      "required": ["uid", "role"]
    }
  },
  "auth": {
    "providers": [
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/events/{eventId}",
        "definition": {
          "schema": {
            "$ref": "#/entities/Event"
          },
          "description": "Stores all events. Publicly readable and writable for debugging purposes."
        }
      },
      {
        "path": "/users/{userId}",
        "definition": {
          "schema": {
            "$ref": "#/entities/User"
          },
          "description": "Stores user profile information. A user can only create, read, or update their own document."
        }
      }
    ]
  }
}
